# ========================================
# EPA LIBERIA ERRS DASHBOARD - ENVIRONMENT CONFIGURATION
# ========================================

# ----------------------------------------
# Application Configuration
# ----------------------------------------
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0
REACT_APP_DEBUG=true
REACT_APP_APP_NAME="EPA Liberia ERRS Dashboard"

# ----------------------------------------
# API Configuration
# ----------------------------------------
REACT_APP_API_BASE_URL=https://api.epa-liberia.gov
REACT_APP_API_VERSION=v1
REACT_APP_API_TIMEOUT=30000

# WebSocket Configuration
REACT_APP_WEBSOCKET_URL=wss://ws.epa-liberia.gov
REACT_APP_WEBSOCKET_RECONNECT_INTERVAL=5000

# ----------------------------------------
# Authentication & Security
# ----------------------------------------
REACT_APP_JWT_SECRET=your_jwt_secret_key_here
REACT_APP_ENCRYPTION_KEY=your_encryption_key_here
REACT_APP_SESSION_TIMEOUT=3600000

# OAuth Configuration (if using external auth)
REACT_APP_OAUTH_CLIENT_ID=your_oauth_client_id
REACT_APP_OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# ----------------------------------------
# Map & Geospatial Services
# ----------------------------------------
REACT_APP_MAP_API_KEY=your_mapbox_api_key_here
REACT_APP_MAP_STYLE=mapbox://styles/epa-liberia/custom-style
REACT_APP_SATELLITE_API_KEY=your_satellite_api_key
REACT_APP_GEOCODING_API_KEY=your_geocoding_api_key

# Map Configuration
REACT_APP_DEFAULT_MAP_CENTER_LAT=6.4281
REACT_APP_DEFAULT_MAP_CENTER_LNG=-9.4295
REACT_APP_DEFAULT_MAP_ZOOM=7

# ----------------------------------------
# External Environmental APIs
# ----------------------------------------
REACT_APP_WEATHER_API_KEY=your_openweather_api_key
REACT_APP_WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Air Quality API
REACT_APP_AIR_QUALITY_API_KEY=your_air_quality_api_key
REACT_APP_AIR_QUALITY_API_URL=https://api.waqi.info

# Water Quality API
REACT_APP_WATER_QUALITY_API_KEY=your_water_quality_api_key
REACT_APP_WATER_QUALITY_API_URL=https://api.waterquality.gov

# ----------------------------------------
# Monitoring & Analytics
# ----------------------------------------
# Google Analytics
REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X
REACT_APP_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Error Tracking (Sentry)
REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
REACT_APP_SENTRY_ENVIRONMENT=development

# Performance Monitoring
REACT_APP_PERFORMANCE_MONITORING=true
REACT_APP_LOG_LEVEL=debug

# ----------------------------------------
# Data Storage & Export
# ----------------------------------------
REACT_APP_EXPORT_FORMAT=pdf,excel,csv
REACT_APP_MAX_EXPORT_RECORDS=10000
REACT_APP_DATA_RETENTION_DAYS=365

# Cloud Storage (AWS S3 for backups)
REACT_APP_AWS_REGION=us-east-1
REACT_APP_AWS_S3_BUCKET=epa-liberia-errs-data
REACT_APP_AWS_ACCESS_KEY_ID=your_aws_access_key
REACT_APP_AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ----------------------------------------
# Notification Services
# ----------------------------------------
# Email Service (SendGrid)
REACT_APP_SENDGRID_API_KEY=your_sendgrid_api_key
REACT_APP_FROM_EMAIL=noreply@epa.gov.lr
REACT_APP_ADMIN_EMAIL=admin@epa.gov.lr

# SMS Service (Twilio)
REACT_APP_TWILIO_ACCOUNT_SID=your_twilio_account_sid
REACT_APP_TWILIO_AUTH_TOKEN=your_twilio_auth_token
REACT_APP_TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key
REACT_APP_FIREBASE_PROJECT_ID=epa-liberia-errs
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789

# ----------------------------------------
# Alert Configuration
# ----------------------------------------
REACT_APP_ALERT_REFRESH_INTERVAL=30000
REACT_APP_CRITICAL_ALERT_SOUND=true
REACT_APP_ALERT_EMAIL_ENABLED=true
REACT_APP_ALERT_SMS_ENABLED=true

# Threshold Configuration
REACT_APP_AIR_QUALITY_WARNING_THRESHOLD=50
REACT_APP_AIR_QUALITY_DANGER_THRESHOLD=100
REACT_APP_RADIATION_WARNING_THRESHOLD=5.0
REACT_APP_RADIATION_DANGER_THRESHOLD=10.0
REACT_APP_WATER_QUALITY_WARNING_THRESHOLD=60
REACT_APP_WATER_QUALITY_DANGER_THRESHOLD=40

# ----------------------------------------
# Station Configuration
# ----------------------------------------
REACT_APP_STATION_OFFLINE_TIMEOUT=300000
REACT_APP_DATA_COLLECTION_INTERVAL=60000
REACT_APP_STATION_HEARTBEAT_INTERVAL=120000

# ----------------------------------------
# UI Configuration
# ----------------------------------------
REACT_APP_THEME=dark
REACT_APP_REFRESH_INTERVAL=300000
REACT_APP_CHART_ANIMATION=true
REACT_APP_AUTO_REFRESH=true

# Language & Localization
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=en,fr
REACT_APP_TIMEZONE=Africa/Monrovia

# ----------------------------------------
# Development & Testing
# ----------------------------------------
REACT_APP_MOCK_DATA=false
REACT_APP_BYPASS_AUTH=false
REACT_APP_ENABLE_DEV_TOOLS=true

# Test Configuration
REACT_APP_TEST_API_URL=http://localhost:5000
REACT_APP_TEST_WEBSOCKET_URL=ws://localhost:5001

# ----------------------------------------
# Production Overrides
# ----------------------------------------
# Uncomment these for production deployment
# REACT_APP_ENVIRONMENT=production
# REACT_APP_DEBUG=false
# REACT_APP_API_BASE_URL=https://production-api.epa.gov.lr
# REACT_APP_WEBSOCKET_URL=wss://production-ws.epa.gov.lr

# ----------------------------------------
# Backup & Recovery
# ----------------------------------------
REACT_APP_BACKUP_ENABLED=true
REACT_APP_BACKUP_INTERVAL=86400000
REACT_APP_BACKUP_RETENTION_DAYS=30

# ----------------------------------------
# Integration Services
# ----------------------------------------
# World Bank Environmental Data
REACT_APP_WORLD_BANK_API_KEY=your_world_bank_api_key

# UN Environment Programme API
REACT_APP_UNEP_API_KEY=your_unep_api_key

# NASA Earth Data API
REACT_APP_NASA_API_KEY=your_nasa_api_key

# ----------------------------------------
# Compliance & Reporting
# ----------------------------------------
REACT_APP_COMPLIANCE_STANDARDS=WHO,EPA_US,EU
REACT_APP_REPORT_GENERATION_ENABLED=true
REACT_APP_AUTO_REPORT_SCHEDULE=daily,weekly,monthly

# ----------------------------------------
# Emergency Response
# ----------------------------------------
REACT_APP_EMERGENCY_CONTACT=+231-XXX-XXXX
REACT_APP_EMERGENCY_EMAIL=emergency@epa.gov.lr
REACT_APP_EMERGENCY_RESPONSE_TEAM=true

# ----------------------------------------
# Note: 
# 1. Copy this file to .env.local for development
# 2. Update values with your actual API keys and configuration
# 3. Never commit .env.local or production environment files to git
# 4. Use different values for development, staging, and production
# ========================================
