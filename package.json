{
  "name": "epa-liberia-errs-dashboard",
  "version": "1.0.0",
  "description": "Environmental Research & Radiation Safety Dashboard for EPA Liberia - Real-time monitoring and management system for environmental parameters across Liberia",
  "private": true,
  "homepage": "https://epa-liberia.github.io/errs-dashboard",
  "repository": {
    "type": "git",
    "url": "https://github.com/epa-liberia/errs-dashboard.git"
  },
  "keywords": [
    "environmental-monitoring",
    "radiation-safety",
    "epa-liberia",
    "dashboard",
    "real-time-monitoring",
    "government",
    "environmental-compliance"
  ],
  "author": {
    "name": "EPA Liberia - ERRS Department",
    "email": "errs@epa.gov.lr",
    "url": "https://epa.gov.lr"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "react-scripts": "5.0.1",
    "recharts": "^2.5.0",
    "axios": "^1.3.4",
    "date-fns": "^2.29.3",
    "lodash": "^4.17.21",
    "framer-motion": "^10.0.1",
    "react-query": "^3.39.3",
    "socket.io-client": "^4.6.1",
    "styled-components": "^5.3.9",
    "leaflet": "^1.9.3",
    "react-leaflet": "^4.2.1",
    "chart.js": "^4.2.1",
    "react-chartjs-2": "^5.2.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "file-saver": "^2.0.5",
    "react-toastify": "^9.1.1",
    "react-table": "^7.8.0",
    "react-select": "^5.7.0",
    "react-datepicker": "^4.10.0",
    "moment": "^2.29.4",
    "classnames": "^2.3.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "eslint": "^8.36.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.8.4",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "cross-env": "^7.0.3",
    "serve": "^14.2.0",
    "web-vitals": "^2.1.4",
    "workbox-webpack-plugin": "^6.5.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "build:analyze": "npm run build && npx serve -s build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "test:coverage": "npm test -- --coverage --watchAll=false",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "warn",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "proxy": "http://localhost:5000"
}
